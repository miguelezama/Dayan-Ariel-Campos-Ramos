<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".UI.HourlyWeatherActivity">

    <TextView
            android:text="@string/hourly_weather"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:id="@+id/tittleHourlyTWeather" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center" android:textSize="24sp"/>
    <TextView
            android:text="@string/sumary_of_the_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tittleHourlyTWeather"
            app:layout_constraintEnd_toEndOf="@+id/tittleHourlyTWeather"
            android:id="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/tittleHourlyTWeather"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.487" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:textSize="18sp" android:textAlignment="center"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:id="@+id/hourlyRecyclerView" android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>